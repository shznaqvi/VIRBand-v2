<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seaction_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_abstract_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.aku.hassannaqvi.virbandhouseholdsurvey.SectionAActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="edu.aku.hassannaqvi.virbandhouseholdsurvey.MainActivity">


        <TextView
            android:id="@+id/crf1_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sectionG"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />


        <!--  = = = = =  START OF FORM FIELDS - Section G = = = = = -->

        <!--Main Area-->
        <TextView
            android:id="@+id/areaCode"
            style="@style/labels"
            android:text="@string/AreaCode" />

        <!-- Sub Area Code -->
        <TextView
            style="@style/labels"
            android:text="@string/subAreaCode" />

        <EditText
            android:id="@+id/subAreaCode"
            style="@style/textInput"
            android:hint="@string/subAreaCode"
            android:inputType="number"
            android:maxLength="2" />

        <LinearLayout
            android:id="@+id/fldGrpDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/labels"
                android:text="@string/vb03" />

            <DatePicker
                android:id="@+id/vb03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dullWhileOverlay"
                android:calendarViewShown="true"
                android:datePickerMode="spinner"
                android:paddingTop="8dp"
                android:spinnersShown="true" />

        </LinearLayout>

        <!--Household No. (with Family type) -->
        <TextView
            style="@style/labels"
            android:text="@string/household" />

        <EditText
            android:id="@+id/household"
            style="@style/textInput"
            android:hint="@string/household"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:maxLength="5" />

        <!--  = = = = =  END OF FORM FIELDS - Section G = = = = = -->


        <TextView
            android:id="@+id/crf2_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="@string/sectionH"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />


        <!--  = = = = =  START OF FORM FIELDS - Section H = = = = = -->

        // Name

        <TextView
            style="@style/labels"
            android:text="@string/vh01" />

        <EditText
            android:id="@+id/vh01"
            style="@style/textInput"
            android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/vc01"
            android:inputType="textPersonName"
            android:maxLength="35" />

        <TextView
            style="@style/labels"
            android:text="@string/vh02" />

        <RadioGroup
            android:id="@+id/vh02"
            style="@style/radiogroup">

            <RadioButton
                android:id="@+id/vh0201"
                style="@style/radiobutton"
                android:text="@string/vb0201" />

            <RadioButton
                android:id="@+id/vh0202"
                style="@style/radiobutton"
                android:text="@string/vb0202" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/vbAgeDob"
            style="@style/radiogroup"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimary">

            <RadioButton
                android:id="@+id/vbDob"
                style="@style/radiobutton"
                android:text="@string/vh03" />

            <RadioButton
                android:id="@+id/vbAge"
                style="@style/radiobutton"
                android:text="@string/vh04" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/fldGrpDOB_H"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/labels"
                android:text="@string/vh03" />

            <DatePicker
                android:id="@+id/vh03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dullWhileOverlay"
                android:calendarViewShown="true"
                android:datePickerMode="spinner"
                android:paddingTop="8dp"
                android:spinnersShown="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fldGrpAge_H"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                style="@style/labels"
                android:text="@string/vh04" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/vh04d"
                    style="@style/textInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:hint="@string/vb04d"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/vh04m"
                    style="@style/textInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:hint="@string/vb04m"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/vh04y"
                    style="@style/textInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="10"
                    android:hint="@string/vb04y"
                    android:inputType="number"
                    android:maxLength="1" />
            </LinearLayout>
        </LinearLayout>


        // Respondent's Name

        <TextView
            style="@style/labels"
            android:text="@string/vh05" />

        <EditText
            android:id="@+id/vh05"
            style="@style/textInput"
            android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/vc01"
            android:inputType="textPersonName"
            android:maxLength="35" />

        // Relationship

        <TextView
            style="@style/labels"
            android:text="@string/vh06" />

        <RadioGroup
            android:id="@+id/vh06"
            style="@style/radiogroup"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/vh0601"
                style="@style/radiobutton"
                android:text="@string/vh0601"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0602"
                style="@style/radiobutton"
                android:text="@string/vh0602"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0603"
                style="@style/radiobutton"
                android:text="@string/vh0603"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0604"
                style="@style/radiobutton"
                android:text="@string/vh0604"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0605"
                style="@style/radiobutton"
                android:text="@string/vh0605"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0606"
                style="@style/radiobutton"
                android:text="@string/vh0606"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0607"
                style="@style/radiobutton"
                android:text="@string/vh0607"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0608"
                style="@style/radiobutton"
                android:text="@string/vh0608"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

            <RadioButton
                android:id="@+id/vh0688"
                style="@style/radiobutton"
                android:text="@string/Others"
                android:layout_weight="@null"
                android:layout_width="match_parent"/>

        </RadioGroup>

        <EditText
            android:id="@+id/vh0688x"
            style="@style/textInput"
            android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/Others"
            android:inputType="text"
            android:maxLength="255" />

        <!--PARENTS NAME-->

        <TextView
            style="@style/labels"
            android:text="@string/vh07" />

        <EditText
            android:id="@+id/vb07"
            style="@style/textInput"
            android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/vh07"
            android:inputType="textPersonName"
            android:maxLength="35" />

        <TextView
            style="@style/labels"
            android:text="@string/vh08" />

        <EditText
            android:id="@+id/vb08"
            style="@style/textInput"
            android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/vh08"
            android:inputType="textPersonName"
            android:maxLength="35" />

        <!--Location of birth-->

        <TextView
            style="@style/labels"
            android:text="@string/vh09" />
        <RadioGroup
            android:id="@+id/vh09"
            style="@style/radiogroup"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/vh0901"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/vb0701" />

            <RadioButton
                android:id="@+id/vh0902"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/vb0702" />

            <RadioButton
                android:id="@+id/vh0903"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/vb0703" />

            <RadioButton
                android:id="@+id/vh0904"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/vb0704" />

            <RadioButton
                android:id="@+id/vh0988"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/Others" />

        </RadioGroup>

        <EditText
            android:id="@+id/vh0988x"
            style="@style/textInput"
            android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/Others"
            android:inputType="text"
            android:maxLength="255" />

        <!--Child vaccine-->

        <TextView
            style="@style/labels"
            android:text="@string/vh10" />
        <RadioGroup
            android:id="@+id/vh10"
            style="@style/radiogroup"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/vh1001"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/J_Yes" />

            <RadioButton
                android:id="@+id/vh1002"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/J_No" />

        </RadioGroup>

        <TextView
            style="@style/labels"
            android:text="@string/vh11" />
        <RadioGroup
            android:id="@+id/vh11"
            style="@style/radiogroup"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/vh1101"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/J_Yes" />

            <RadioButton
                android:id="@+id/vh1102"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/J_No" />

            <RadioButton
                android:id="@+id/vh1103"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/NotAvailable" />

        </RadioGroup>

        <TextView
            style="@style/labels"
            android:text="@string/vh12" />
        <RadioGroup
            android:id="@+id/vh12"
            style="@style/radiogroup"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/vh1201"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/J_Yes" />

            <RadioButton
                android:id="@+id/vh1202"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/J_No" />

            <RadioButton
                android:id="@+id/vh1203"
                style="@style/radiobutton"
                android:layout_width="match_parent"
                android:layout_weight="@null"
                android:text="@string/NotAvailable" />

        </RadioGroup>

        <!--  = = = = =  END OF FORM FIELDS = = = = = -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_End"
                style="@style/buttons"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="endInterview"
                android:text="@string/end_interview"
                android:textColor="#ff1e1e" />

            <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

            <Button
                android:id="@+id/btn_Continue"
                style="@style/buttons"
                android:onClick="startInterview"
                android:text="@string/start_interview"
                android:textColor="#1ed61e" />
            <!--'onClick' for btn_Continue will call next section form e.g.: openSection2-->

        </LinearLayout>

    </LinearLayout>

</ScrollView>
